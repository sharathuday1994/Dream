<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/search_list_image" />
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/search_list_image">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_car_name"
            android:textSize="18dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_car_brand"
            android:layout_below="@+id/list_car_name"
            android:textSize="18dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_car_seatno"
            android:layout_below="@+id/list_car_brand"
            android:textSize="18dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_car_mileage"
            android:layout_below="@+id/list_car_seatno"
            android:textSize="18dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_car_class"
            android:layout_below="@+id/list_car_mileage"
            android:textSize="18dp"
            android:layout_marginBottom="2dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_list_image"
        android:textSize="22dp"
        android:textStyle="bold"/>

</RelativeLayout>